# using left shift operator     
class Solution:
    def checkKthBit(self, n, k):
        # code here
        if(n&(1<<k)!=0):
            return True 
        return False 
# using right shift operator
class Solution:
    def checkKthBit(self, n, k):
        # code here
        if((n>>k)&1 == 0):
            return False 
        return True 
